@model PatientNote.Models.InputModels.NoteInputModel

@{
    ViewData["Title"] = "Ajouter une Note";
}

<h2>Ajouter une Note</h2>

<form asp-action="Ajout" method="post">
    <div class="form-group">
        <label asp-for="PatientId" class="control-label"></label>
        <input asp-for="PatientId" class="form-control" />
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group mt-1">
        <input type="submit" value="Ajouter" class="btn btn-outline-success" />
    </div>
</form>

<div>
    <a class="btn btn-outline-danger mt-1" asp-action="Index" asp-controller="Patients">Retour à la liste</a>
</div>
